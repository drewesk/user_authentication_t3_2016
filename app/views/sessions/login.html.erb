<div class="page-header">
  <%= link_to root_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>Login</h1>
</div>

<%= form_tag login_path, class: 'form-horizontal', role: 'form' do %>
  <div class='form-group'>
    <%= label_tag :email, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= email_field_tag :email, nil, class: "form-control", placeholder: 'user@domain.com' %>
    </div>
  </div>

  <div class='form-group'>
    <%= label_tag :password, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= password_field_tag :password, nil, class: "form-control", placeholder: 'password' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
